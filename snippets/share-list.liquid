        {% if settings.share_prod_on_twitter ||  settings.share_prod_on_facebook ||  settings.share_prod_on_googleplus %}
        <ul id="share-list">

          {% if settings.share_prod_on_twitter %}
          <li><!-- share on twitter -->
            <a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal">Tweet</a>
          </li>
          {% endif %}

          {% if settings.share_prod_on_facebook %}
          <li><!-- share on facebook -->
            <div id="fb-root"></div>
            <div class="fb-like" data-send="false" data-layout="button_count" data-width="120" data-show-faces="false"></div>          
          </li>
          {% endif %}

          {% if settings.share_prod_on_googleplus %}
          <li><!-- +1 it -->
            <div class="g-plusone" data-size="medium" data-annotation="inline" data-width="150"></div>
          </li>
          {% endif %}
          
          {% if settings.share_prod_on_pinterest %}
          <li><!-- pin -->
            <a href="http://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&media={{ product.featured_image | product_img_url: 'grande' | split:'?' | first  }}&description={{ product.title | escape | replace:' ','%20' }}" class="pin-it-button">Pin It</a>
            <script type="text/javascript" src="http://assets.pinterest.com/js/pinit.js"></script>
          </li>
          {% endif %}

        </ul>
        {% endif %}
