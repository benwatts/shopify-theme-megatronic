/**
 * Header > Search
 */

#header #search{
  float: right;
  padding: 4px 0 0 0;
  }
  
.search-input{
  float: left;
  background: #eee;
  border: none;
  width: 100px; height: 25px; 
  color: #1b3440;
  font-size: 0.923em; /* 12/13 */
  padding: 0 10px;
  -webkit-transition: width .25s ease-in;
  -moz-transition: width .25s ease-in;
  transition: width .25s ease-in;   
  -moz-border-radius: 8px 0 0 8px; -webkit-border-radius: 8px 0 0 8px; border-radius: 8px 0 0 8px;
  } 
.search-input:focus{ 
  width: 150px; 
  outline: none;
  }
  
#header #search .search-input{
  line-height: 25px;
  } 
  
.search-submit{
  cursor: pointer;
  float: left;
  width: 27px;
  height: 25px;
  line-height: 999px; text-indent: -900em; overflow: hidden; font-size: 0;  /* hide text inside input (a lot of diff ways) */
  background: {{ settings.link_colour }} url( {{'search-btn-white.png'|asset_url}}) 0 0 no-repeat;
  -moz-border-radius: 0 8px 8px 0; -webkit-border-radius: 0 8px 8px 0; border-radius: 0 8px 8px 0;
  color: #fff;
  border: none;
  }
.search-submit:hover{
  background-color: {{ settings.link_hover_colour }};
  }
.ie6 .search-submit{ 
  background-image: none; 
  width: auto;
  line-height: 1em;
  text-indent: 0;
  font-size: 13px;
  }



/**
 * Header > Top Menu (Nav + Cart)
 */ 

