/**
 * Header
 */

#header-wrapper{
  background: {{ settings.header_colour }} url( {{'header-gradient-white.png'|asset_url}} ) 0 0 repeat-x;
  }
.ie6 #header-wrapper{ background-image: none; } 
#header{
